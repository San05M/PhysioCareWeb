{% extends "base.njk" %}

{% block titulo %} Record | add record {% endblock %}

{% block contenido %}

<h1 style="color: #4b5320; font-family: 'Georgia', serif;">Add new record</h1>

<form
  action="/records"
  method="post"
  style="background-color: #e6ddc4; padding: 20px; border-radius: 10px"
>
  {% if error %}
  <div class="alert alert-danger" style="color: #4b5320">
    <p class="text-danger">{{ error.general }}</p>
  </div>
  {% endif %}
  <div class="form-group">
    <label for="insuranceNumber" style="color: #4b5320">Insurance Number: </label>
    <input
      type="text"
      class="form-control"
      name="insuranceNumber"
      id="insuranceNumber"
      placeholder="Insurance Number"
    />
    {% if error.insuranceNumber %}
    <div class="alert alert-danger" style="color: #4b5320">
      <p class="text-danger">{{ error.insuranceNumber }}</p>
    </div>
    {% endif %}
  </div>
  <div class="form-group">
    <label for="medicalRecord" style="color: #4b5320">Medical Records:</label>
    <input
      type="text"
      class="form-control"
      name="medicalRecord"
      id="medicalRecord"
      placeholder="Medical Record"
    />
    {% if error.medicalRecord %}
    <div class="alert alert-danger" style="color: #4b5320">
      <p class="text-danger">{{ error.medicalRecord }}</p>
    </div>
    {% endif %}
  </div>

  <button
    type="submit"
    class="btn btn-primary"
    style="
      background-color: #8f9779;
      border: none;
      padding: 10px 20px;
      border-radius: 5px;
    "
  >
    Send
  </button>
</form>

{% endblock %}

<style>
  /* Hover effect para el bot√≥n Enviar */
  .btn-primary:hover {
    background-color: #7b8a3f; /* Verde musgo */
    color: #f3efe0;
    transform: translateY(-3px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    transition: all 0.3s ease;
  }
</style>
