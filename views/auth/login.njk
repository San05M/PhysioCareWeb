{% extends "base.njk" %}

{% block titulo %} Login {% endblock %}

{% block contenido %}

<h1 style="color: #4b5320; font-family: 'Georgia', serif;">Login</h1>

<form
  action="/auth/login"
  method="post"
  style="background-color: #e6ddc4; padding: 20px; border-radius: 10px"
>
  {% if error %}
  <div class="alert alert-danger" style="color: #4b5320">
    <p class="text-danger">{{ error.general }}</p>
  </div>
  {% endif %}
  <div class="form-group">
    <label for="login" style="color: #4b5320">User:</label>
    <input
      type="text"
      class="form-control"
      name="login"
      id="login"
      placeholder="Usuario"
    />
    {% if error.unique %}
    <div class="alert alert-danger" style="color: #4b5320">
      <p class="text-danger">{{ error.general }}</p>
    </div>
    {% elseif error.login %}
    <div class="alert alert-danger" style="color: #4b5320">
      <p class="text-danger">{{ error.login }}</p>
    </div>
    {% endif %}
  </div>

  <div class="form-group">
    <label for="password" style="color: #4b5320">Password:</label>
    <input
      type="text"
      class="form-control"
      name="password"
      id="password"
      placeholder="*********"
    />
    {% if error.password %}
    <div class="alert alert-danger" style="color: #4b5320">
      <p class="text-danger">{{ error.password }}</p>
    </div>
    {% endif %}
  </div>

  <button
    type="submit"
    class="btn btn-primary"
    style="
      background-color: #8f9779;
      border: none;
      padding: 10px 20px;
      border-radius: 5px;
    "
  >
    Send
  </button>
</form>

{% endblock %}

<style>
  /* Hover effect para el bot√≥n Enviar */
  .btn-primary:hover {
    background-color: #7b8a3f; /* Verde musgo */
    color: #f3efe0;
    transform: translateY(-3px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    transition: all 0.3s ease;
  }
</style>
